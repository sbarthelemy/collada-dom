.PHONY: $(SUBDIRS) $(PROJECT_FILES) 

all: $(SUBDIRS) $(PROJECT_FILES) $(SRC)
	
$(PROJECT_FILES):
	$(VCC) $@ /build $(PROJECT_CONFIG)
	
rebuild: $(SUBDIRS)
	$(VCC) $(PROJECT_FILES) /rebuild $(PROJECT_CONFIG)

clean: 
	rm -rf $(CLEAN_DIR)
	for dirs in $(SUBDIRS); do \
		$(MAKE) -C $$dirs clean; \
	done

$(SUBDIRS):
	$(MAKE) -C $@

